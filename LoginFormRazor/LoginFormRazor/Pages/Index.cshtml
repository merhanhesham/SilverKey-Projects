@page
@model IndexModel
@{
    ViewData["Title"] = "Login Authentication";
}

@if (User.Identity.IsAuthenticated)
{
    <p>Intern! You are logged in.</p>
    <form method="post" asp-page-handler="logout">
        <button type="submit" class="btn btn-success">Logout</button>
    </form>
}
else
{
    <form method="post">
        @if (Model.ModelState.ContainsKey("") && Model.ModelState[""].Errors.Any())
        {
            <div class="alert alert-danger" role="alert">
                <span>@Model.ModelState[""].Errors.First().ErrorMessage</span>
            </div>
        }
        <div class="row-cols-2">
        <div>
            <label for="username" class="mb-2">Username:</label>
            <input class="form-control" type="text" id="username" name="username" required>
        </div>
        <div>
            <label for="password" class="mb-2">Password:</label>
            <input class="form-control mb-3" type="password" id="password" name="password" required>
        </div>
        </div>
        <button type="submit" class="btn btn-success">Login</button>
        
    </form>
}